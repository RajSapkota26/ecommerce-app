<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_180mdp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_auto_image_slider"
        android:layout_width="@dimen/_180mdp"
        android:layout_height="@dimen/_150mdp"
        android:layout_gravity="center"
        android:src="@drawable/sample_image"
        android:scaleType="fitXY" />


    <FrameLayout
        android:id="@+id/fl_shadow_container"
        android:background="#BEF8F0F0"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30mdp"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/tv_auto_image_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5mdp"
            android:text="Get Education"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_12font_mdp"
            android:gravity="center_horizontal" />

    </FrameLayout>

</FrameLayout>